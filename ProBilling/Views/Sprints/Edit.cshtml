@model ProBilling.Models.Sprint

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Sprint</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SprintId" />
            <div class="form-group">
                <label asp-for="SprintNumber" class="control-label"></label>
                <input asp-for="SprintNumber" class="form-control" />
                <span asp-validation-for="SprintNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SprintStart" class="control-label"></label>
                <input asp-for="SprintStart" class="form-control" />
                <span asp-validation-for="SprintStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SprintEnd" class="control-label"></label>
                <input asp-for="SprintEnd" class="form-control" />
                <span asp-validation-for="SprintEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team" class="control-label"></label>
                <select asp-for="Team" class="form-control" asp-items="ViewBag.Teams"></select>
                <span asp-validation-for="Team" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
