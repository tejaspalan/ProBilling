@model IEnumerable<ProBilling.Models.Sprint>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SprintNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SprintStart)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SprintEnd)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SprintNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SprintStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SprintEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team.TeamId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SprintId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SprintId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SprintId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
