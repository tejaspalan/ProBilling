							{
								<select class="form-control" asp-for="@Model[i].ScrumOfScrum" asp-items="@ViewBag.CompanyMeeting"></select>
							}
							else
							{
								<select class="form-control" asp-for="@Model[i].ScrumOfScrum" asp-items="@ViewBag.CompanyMeeting" disabled=""></select>
