							<select class="form-control" asp-for="@Model[i].MeetingWithCdl" asp-items="@ViewBag.CompanyMeeting"></select>
						</td>
						<td>
							@if (Model[i].Designation == DesignationEnum.ScrumMaster.ToString())
							{
								<select class="form-control" asp-for="@Model[i].Smf" asp-items="@ViewBag.CompanyMeeting"></select>
							}
							else
							{
								<select class="form-control" asp-for="@Model[i].Smf" asp-items="@ViewBag.CompanyMeeting" disabled=""></select>
							}
						</td>
						<td>
							@if (Model[i].Designation == DesignationEnum.ScrumMaster.ToString())
							{
								<select class="form-control" asp-for="@Model[i].WoW" asp-items="@ViewBag.CompanyMeeting"></select>
							}
							else
							{
								<select class="form-control" asp-for="@Model[i].WoW" asp-items="@ViewBag.CompanyMeeting" disabled=""></select>
							}
						</td>
						<td>
							@if (Model[i].Designation == DesignationEnum.ScrumMaster.ToString())
							{
